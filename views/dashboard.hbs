<h1>
    <i class="fa fa-user"></i></h1>
<h3>Welcome {{name}}</h3>


{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
              <td><a href="/stories/{{_id}}">{{title}}</a></td>
              <td>{{description}}</td>

              <td>{{formatDate createdAt '"Do MMMM YYYY, h:mm:ss a'}}</td> 
               <td><span class="dash-status">{{status}}</span></td>
              <td>
                  <a href="/stories/edit/{{_id}}" class="btn btn_float grey">
                 <small><i class="fas fa-edit"></i></small>
                   </a>

                   <form action="/stories/{{_id}}" method="POST" id="delete-form">
                   <input type="hidden" name="_method" value="DELETE">
                   <button type="submit" class="btn pink">
                      <small><i class="fas fa-trash"></i></small> 
                   </button>
                   </form>
              </td>
        </tr>
        {{/each}}
    </body>
</table>
{{else}}
<h3><i class="fas fa-exclamation-triangle"></i><p>You have not created any blog Articles yet</p></h3>
{{/if}}